{
  "name": "v",
  "version": "0.0.0",
  "description": "A webpack stats visualizer",
  "scripts": {
    "prepare": "snowpack install",
    "dev": "snowpack dev",
    "prettify": "prettier --write src/**/**/*.{ts,tsx,json}"
